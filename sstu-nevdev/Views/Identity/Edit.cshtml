@model sstu_nevdev.Models.IdentityViewModel

<h2>Редактирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (Model.Picture != null)
        {
            <img src="~/Content/uploads/@Model.Picture" />
        }

        <div class="form-group">
            @Html.LabelFor(model => model.GUID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GUID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GUID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Изображение")
            <label aria-describedby="imageHelpBlock" for="images" class="btn btn-primary">
                <input class="form-control" id="images" type="file" accept="image/png, image/jpeg"
                       onchange="$(" #upload-file-info").html($(this).val());" name="FileData">
                <span>Добавить изображения</span>
            </label>
            <small id="imageHelpBlock" class="form-text text-muted">
                Допустимый формат изображения: jpg, png.
            </small>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
