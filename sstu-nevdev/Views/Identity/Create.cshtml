@model Domain.Core.Identity

<h2>Добавить пользователя</h2>

@using (Html.BeginForm("Create", "Identity", FormMethod.Post, new { model = @Model, enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.GUID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GUID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GUID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RFID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RFID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RFID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.QR, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QR, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QR, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Изображение")
            <label aria-describedby="imageHelpBlock" for="images" class="btn btn-primary">
                <input class="form-control" id="images" type="file" accept="image/png, image/jpeg" 
                       onchange="$(" #upload-file-info").html($(this).val());" name="FileData">
                <span>Добавить изображения</span>
            </label>
            <small id="imageHelpBlock" class="form-text text-muted">
                Допустимый формат изображения: jpg, png.
            </small>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
